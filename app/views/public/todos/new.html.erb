<h1>Create New Todo!</h1>

<%= form_with model: @todo, url: todos_path, method: :post do |f| %>
  <div>
    <%= f.label :title, "タイトル" %>
    <%= f.text_field :title %>
  </div>

  <div>
    <%= f.label :body, "Todo内容" %>
    <%= f.text_area :body %>
  </div>

  <div>
    <%= f.label :importance, "重要度" %>
    <!--<%= f.select :importance, {'低':0, '中':1, '高':2} %>-->
    <%= f.select :importance, Todo.importances.keys.map {|k| [I18n.t("enums.todo.importance.#{k}"), k]} %>
    <!--<%= f.select :importance, Todo.importances_i18n.invert %>-->
  </div>

  <%= f.submit "作成！" %>

<% end %>