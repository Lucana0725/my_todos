<%# <h1>Admin::Users#edit</h1>
<p>Find me in app/views/admin/users/edit.html.erb</p> %>
<h1>"<%= @user.nickname %>"さんのプロフィール情報編集画面</h1>
<p>※退会フラグの操作のみ可能です。</p>

<%= form_with model: @user, url: admin_user_path(@user.id), method: :patch do |f| %>
  <div>
    <h3>ニックネーム</h3>
    <%= @user.nickname %>
  </div>

  <div>
    <h3>姓</h3>
    <%= @user.last_name %>
  </div>

  <div>
    <h3>名</h3>
    <%= @user.first_name %>
  </div>

  <div>
    <h3>退会フラグ</h3>
    <%= f.radio_button :is_deleted, false %>
    <%= f.label :is_deleted_false, "有効" %>  <!-- :is_deleted_falseで、falseのラジオボタンとシンクロ(ラベルのクリックでもボタンを触れる)するようになる -->
    <%= f.radio_button :is_deleted, true %>
    <%= f.label :is_deleted_true, "退会" %>  <!-- :is_deleted_trueで、trueのラジオボタンとシンクロ(ラベルのクリックでもボタンを触れる)するようになる -->
  </div>
  <%= f.submit "変更を保存" %>
<% end %>