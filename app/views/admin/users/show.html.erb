<h1><%= @user.nickname %>さんのプロフィール</h1>

<div>
  <h3>ID</h3>
  <%= @user.id %>
</div>
<div>
  <h3>ニックネーム</h3>
  <%= @user.nickname %>
</div>
<div>
  <h3>姓</h3>
  <%= @user.last_name %>
</div>
<div>
  <h3>名</h3>
  <%= @user.first_name %>
</div>
<div>
  <h3>退会フラグ</h3>
